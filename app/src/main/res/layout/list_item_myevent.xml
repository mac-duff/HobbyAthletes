<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView_myevent_type"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="left"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/textView_myevent_name"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/imageView_myevent_type"
            android:text="Placeholder name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#ff465a6c"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="false"
            android:singleLine="true"
            android:gravity="center"
            android:ellipsize="marquee" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_toEndOf="@+id/imageView_myevent_type"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/imageView_myevent_type">

            <TextView
                android:id="@+id/textView_myevent_date"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Placeholder Date"
                android:textSize="18sp"
                android:textColor="#395370" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:id="@+id/imageView_myevent_countryflag"
                android:layout_gravity="right"
                android:layout_marginRight="10dp" />
        </FrameLayout>

    </RelativeLayout>

</LinearLayout>